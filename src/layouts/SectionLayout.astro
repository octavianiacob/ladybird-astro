---
export interface Props {
	className: string;
}

const { className } = Astro.props;
---

<section class={`SectionLayout ${className}`}>
	<div class="SectionLayout__inner">
		<slot />
	</div>
</section>

<style lang="scss">
	@import "../styles/variables";

	.SectionLayout {
		height: 100%;
		background-color: #ffffff;
		display: flex;

		&__inner {
			width: 100%;
			min-height: 100vh;
			max-width: $maxWidth;
			margin: 0 auto;
			// padding: 0 1rem;
			display: flex;
			position: relative;
		}
	}

	* {
		scroll-behavior: smooth;
	}
</style>
