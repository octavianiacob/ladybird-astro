---
import { callLogs, dashCards, fakeConvoList } from "../utils/constants";
---

<div class="FakeDashboard">
	<div class="FakeDashboard__cards">
		{
			dashCards.map((dashItem) => (
				<div class="FakeDashboard__cards__item">
					<div class="FakeDashboard__cards__item__title">{dashItem.title}</div>
					<div class="FakeDashboard__cards__item__value">{dashItem.value}</div>
					<div class="FakeDashboard__cards__item__percent">
						<svg
							stroke="currentColor"
							fill="currentColor"
							stroke-width="0"
							viewBox="0 0 16 16"
							height="200px"
							width="200px"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path d="M0 8a8 8 0 1 0 16 0A8 8 0 0 0 0 8m5.904 2.803a.5.5 0 1 1-.707-.707L9.293 6H6.525a.5.5 0 1 1 0-1H10.5a.5.5 0 0 1 .5.5v3.975a.5.5 0 0 1-1 0V6.707z" />
						</svg>
						<span>{dashItem.percent}</span>
					</div>
				</div>
			))
		}
	</div>
	<div class="FakeDashboard__convo">
		<p class="FakeDashboard__convo__title">Pending callâ€¦</p>
		<div>
			<div class="ProgressBar">
				<div class="ProgressBar__bar ProgressBar__bar1"></div>
				<div class="ProgressBar__bar ProgressBar__bar2"></div>
			</div>
			<div class="FakeDashboard__convo__section">
				{
					fakeConvoList.map((group) => (
						<div class="group">
							{group.map((item) => (
								<p>{item}</p>
							))}
						</div>
					))
				}
			</div>
		</div>
	</div>
	<div class="FakeDashboard__callLogs">
		<p class="FakeDashboard__callLogs__title">Recent calls</p>
		<div class="FakeDashboard__logs">
			{
				callLogs.map((item) => (
					<div class="FakeDashboard__logs__item">
						<div class="FakeDashboard__logs__item__text">
							<div class="name">{item.name}</div>
							<div class="dateTime">
								<span>{item.date}</span>
								<span>{item.time}</span>
							</div>
						</div>
						<div class="FakeDashboard__logs__item__icons">
							<svg
								stroke="currentColor"
								fill="currentColor"
								stroke-width="0"
								viewBox="0 0 384 512"
								height="1em"
								width="1em"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80L0 432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z" />
							</svg>
							<svg
								stroke="currentColor"
								fill="currentColor"
								stroke-width="0"
								version="1.2"
								baseProfile="tiny"
								viewBox="0 0 24 24"
								height="1em"
								width="1em"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M19.707 7.293l-4-4c-.187-.188-.441-.293-.707-.293h-8c-1.654 0-3 1.346-3 3v12c0 1.654 1.346 3 3 3h10c1.654 0 3-1.346 3-3v-10c0-.266-.105-.52-.293-.707zm-2.121.707h-1.086c-.827 0-1.5-.673-1.5-1.5v-1.086l2.586 2.586zm-.586 11h-10c-.552 0-1-.448-1-1v-12c0-.552.448-1 1-1h7v1.5c0 1.379 1.121 2.5 2.5 2.5h1.5v9c0 .552-.448 1-1 1z" />
							</svg>
							<svg
								stroke="currentColor"
								fill="currentColor"
								stroke-width="0"
								viewBox="0 0 320 512"
								height="1em"
								width="1em"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z" />
							</svg>
						</div>
					</div>
				))
			}
		</div>
	</div>
</div>

<style lang="scss">
	.FakeDashboard {
		transform: perspective(100%) rotateX(10deg);
		clip-path: polygon(0% 0%, 100% 0%, 99% 100%, 1% 100%);

		background-color: #ffffff;
		width: 100%;
		height: 100%;
		// overflow: auto;
		overflow: hidden;
		padding: 1.5rem;

		display: grid;
		grid-template-columns: 8rem 1fr 10rem;
		gap: 1rem;

		// border-top-left-radius: 2rem;
		// border-top-right-radius: 2rem;
		// overflow: hidden;

		font-size: 12px;

		&__cards {
			display: grid;
			grid-template-rows: repeat(3, 1fr);
			gap: 1rem;

			&__item {
				background-color: #fafafa;
				padding: 0.75rem 0.5rem;
				border-radius: 1rem;
				// box-shadow:
				// 	0 2px 5px rgba(0, 0, 0, 0.1),
				// 	0 1px 2px rgba(0, 0, 0, 0.06);

				display: flex;
				flex-direction: column;
				align-items: flex-start;
				gap: 0.25rem;

				&__title {
					font-size: 1rem;
					margin-bottom: auto;
				}

				&__value {
					font-size: 1.8rem;
					// font-weight: 600;
				}

				&__percent {
					color: #61d43e;
					font-size: 10px;

					display: flex;
					flex-direction: row;
					align-items: center;
					gap: 0.25rem;
					font-weight: 600;

					svg {
						width: 10px;
						height: 10px;
					}
				}
			}
		}

		&__convo {
			background-color: #fafafa;
			border-radius: 1rem;
			padding: 1rem 0.5rem;

			&__title {
				font-size: 1rem;
				margin-bottom: 1rem;
			}

			& > div {
				display: grid;
				grid-template-columns: 0.5rem 1fr;
				align-items: stretch;
				gap: 1rem;
			}

			.ProgressBar {
				width: 0.5rem;
				height: 100%;
				background-color: #eeeeee;
				border-radius: 1rem;

				&__bar {
					height: 25%;
					background-color: #61d43e;
					border-radius: 1rem;
					margin: 1.8rem 0;
				}
			}

			&__section {
				display: flex;
				flex-direction: column;
				align-items: stretch;
				gap: 1.5rem;
				height: 100%;

				.group {
					font-size: 10px;
				}
			}
		}

		&__callLogs {
			background-color: #fafafa;
			border-radius: 1rem;
			padding: 1rem 0.5rem;

			&__title {
				font-size: 1rem;
				margin-bottom: 1rem;
				margin-left: 0.5rem;
			}
		}

		&__logs {
			display: flex;
			flex-direction: column;
			align-items: stretch;
			gap: 1rem;

			&__item {
				border-radius: 1rem;
				// box-shadow:
				// 	0 2px 5px rgba(0, 0, 0, 0.1),
				// 	0 1px 2px rgba(0, 0, 0, 0.06);

				display: flex;
				flex-direction: row;
				align-items: center;
				gap: 1rem;

				&__text {
					display: flex;
					flex-direction: column;
					align-items: flex-start;
					gap: 0.25rem;

					.name {
						font-size: 0.75rem;
					}
					.dateTime {
						font-size: 0.5rem;
						color: #b5b4b4;
					}
				}

				&__icons {
					color: #eeeeee;
					display: flex;
					flex-direction: row;
					align-items: center;
					gap: 0.15rem;
				}
			}
		}
	}
</style>
