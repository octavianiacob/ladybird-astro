---
import SectionLayout from "../layouts/SectionLayout.astro";
import { brandList } from "../utils/constants";
---

<SectionLayout className="BottomSectionWrapper">
	<div class="BottomSection">
		<h1>
			Curious?<br />
			Sign up for all things AI
		</h1>
		<div class="BottomSection__form">
			<input type="email" name="" id="" placeholder="Email*" />
			<p>
				By joining us, you agree to Ladybird's Terms of Use and Privacy Policy
			</p>
		</div>
		<div class="BottomSection__brands">
			{brandList.map((brand) => <img src={brand.logo} alt={brand.name} />)}
		</div>
	</div>
</SectionLayout>

<style lang="scss">
	.BottomSection {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-end;
		gap: 5rem;

		padding: 3rem;

		h1 {
			font-size: 4rem;
			font-weight: 400;
			line-height: 1.2;
			text-align: center;

			// for revealing animation
			opacity: 0;
			// transform: translateY(40%);
		}

		&__form {
			display: flex;
			flex-direction: column;
			gap: 1rem;
			width: 100%;
			max-width: 500px;
			margin-bottom: 1.5rem;

			color: #bdbdbd;

			// for revealing animation
			// opacity: 0;

			input {
				width: 100%;
				padding: 1rem;
				border: 1px solid #000;
				border-radius: 0.5rem;
				outline: none;
				font-size: 1.5rem;
			}

			p {
				font-size: 0.75rem;
				color: #666;
				text-align: center;
			}
		}

		&__brands {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 2rem;
			flex-wrap: wrap;
			margin-top: 2rem;

			// for revealing animation
			// opacity: 0;

			img {
				// width: 100px;
				height: 100px;
				object-fit: contain;
			}
		}
	}

	@media (max-width: 768px) {
		.BottomSection {
			padding: 1rem;
			justify-content: center;

			h1 {
				font-size: 2rem;
			}

			&__form {
				input {
					font-size: 1rem;
				}

				p {
					font-size: 0.5rem;
				}
			}

			&__brands {
				img {
					height: 50px;
				}
			}
		}
	}
</style>
